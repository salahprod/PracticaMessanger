<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />



    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidMessage1">
        <activity
            android:name=".ChatActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".PoliticalActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".groups.CreateGroupActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <activity android:name=".ProfileChatActivity"
            android:screenOrientation="portrait"/>


        <activity
            android:name=".groups.GroupChatActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".groups.GroupSettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".groups.GroupChatActivity" />

        <activity
            android:name=".groups.AddMembersActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:parentActivityName=".groups.GroupSettingsActivity" />

        <activity
            android:name=".RegisterActivity"
            android:screenOrientation="portrait"
            android:exported="false" /> <!-- Сделайте LoginActivity запускаемой -->
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>