<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".PoliticalActivity">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#F8F8F8"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="#0088CC"
            android:src="@android:drawable/ic_media_previous" />

        <TextView
            android:id="@+id/titleBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Условия использования"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Основной скролл -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Условия использования мессенджера Polygram"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Назначение сервиса"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Polygram — это внутренний мессенджер, созданный специально для студентов, преподавателей и сотрудников политеха. Он предназначен для общения, обмена файлами, организации учебного процесса и взаимодействия внутри учебного сообщества."
                android:textSize="16sp"
                android:textColor="#444444"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Основные правила пользования"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Используя Polygram, вы соглашаетесь соблюдать следующие правила:\n• не выдавать себя за других пользователей;\n• не распространять ложную, агрессивную или оскорбительную информацию;\n• не создавать помехи учебному процессу (спам, флуд, массовые рассылки);\n• не передавать вредоносные файлы, вирусы или эксплойты."
                android:textSize="16sp"
                android:textColor="#444444"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Правила студенческого сообщества"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Чтобы поддерживать дружелюбную атмосферу, пользователи обязуются:\n• соблюдать нормы академической этики;\n• уважать однокурсников, преподавателей и сотрудников;\n• не нарушать законодательство РБ;\n• использовать чаты для учебных целей, проектов и организационных вопросов и просто для обычного общения."
                android:textSize="16sp"
                android:textColor="#444444"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Конфиденциальность"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ваши переписки и личные данные защищены и используются только для корректной работы Polygram. Информация передаётся третьим лицам только в случаях, предусмотренных законом или администрацией учебного заведения."
                android:textSize="16sp"
                android:textColor="#444444"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Запрещённый контент"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="В Polygram запрещено размещать:\n• экстремистские или политически агрессивные материалы;\n• NSFW-контент и порнографию;\n• коммерческую рекламу и спам;\n• файлы, нарушающие авторские права;\n• деструктивный, разжигающий ненависть или унижающий контент."
                android:textSize="16sp"
                android:textColor="#444444"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. Обновление условий"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Разработчики Polygram оставляют за собой право обновлять данные правила. Продолжение использования мессенджера означает согласие с актуальной версией условий."
                android:textSize="16sp"
                android:textColor="#444444"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Спасибо, что используете Polygram ❤️"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="50dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
