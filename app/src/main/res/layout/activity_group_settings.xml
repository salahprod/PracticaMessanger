<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:background="@drawable/forma">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="48dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/key_exit" />

            <!-- Group Header - Centered -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="61dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/group_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/artem"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/groupName"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Group Name"
                    android:textStyle="bold"
                    />

                <!-- ДОБАВЛЕНО: Отображение количества участников -->
                <TextView
                    android:id="@+id/membersCount"
                    android:textColor="#676767"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="0 members"
                    android:layout_marginBottom="16dp"
                    />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:id="@+id/actionButtonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:background="#FFFFFF"
                android:paddingVertical="6dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/addMembersButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="120dp"
                    android:background="@drawable/create_group_btn"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"/>

                <LinearLayout
                    android:id="@+id/leaveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="17dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/leaveText"
                        android:textColor="#AB68FC"
                        android:textSize="10sp"
                        android:layout_marginBottom="2dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="LEAVE"
                        />

                    <LinearLayout
                        android:id="@+id/leaveUnderline"
                        android:layout_width="31dp"
                        android:layout_height="1dp"
                        android:background="#AB68FC"
                        android:orientation="vertical">
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- ДОБАВЛЕНО: Заголовок списка участников -->
            <TextView
                android:id="@+id/membersListTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Participants"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                />

            <!-- Список участников -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/membersListLayout"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="#E5E5E5"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                />

            <!-- ДОБАВЛЕНО: Сообщение когда список пустой -->
            <TextView
                android:id="@+id/emptyMembersText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No members in this group"
                android:textColor="#676767"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>