<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp">

    <!-- Аватарка -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sender_avatar_iv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/artem"
        android:visibility="invisible"
        android:layout_marginStart="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="2dp" />

    <!-- Основной контейнер сообщения -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        android:gravity="start">

        <!-- Имя отправителя -->
        <TextView
            android:id="@+id/sender_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="2dp"
            android:visibility="gone" />

        <!-- Контейнер текста сообщения и времени -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backcolor_message"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:orientation="vertical"
            android:maxWidth="280dp">

            <TextView
                android:id="@+id/message_tv"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="This is message text" />

            <TextView
                android:id="@+id/message_date_tv"
                android:textColor="#9D9D9D"
                android:textSize="10sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:text="12.01.2022 13:30" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>