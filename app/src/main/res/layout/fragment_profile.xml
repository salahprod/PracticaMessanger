<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/rpywqwf6b9am"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/lr270d4c5fc9dc6fc">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rvsz01qg0rrq"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="21dp"
                android:layout_marginStart="7dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Профиль" />

            <LinearLayout
                android:id="@+id/r692c2rc2v1e"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#00000000"
                android:layout_marginBottom="30dp"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/ru62zp115rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="40dp"
                android:orientation="vertical">

                <!-- Контейнер для изображения профиля и прогресс-бара -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="20dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImage"
                        android:layout_width="127dp"
                        android:layout_height="127dp"
                        android:src="@drawable/artem"
                        android:clickable="true"
                        android:focusable="true" />

                    <!-- ProgressBar для отображения загрузки фото -->
                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:indeterminateTint="#2196F3" />

                </FrameLayout>

                <ImageButton
                    android:id="@+id/logoutBtn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="-10dp"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logout" />
            </LinearLayout>

            <!-- NAME Section -->
            <TextView
                android:id="@+id/r5obszy5499"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Имя"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/userNameEditText"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text=""
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/editNameBtn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:tint="#2196F3"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="36dp" />

            <!-- EMAIL Section -->
            <TextView
                android:id="@+id/rv99bsvrtqi8"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"
                android:layout_marginStart="41dp"
                android:fontFamily="@font/montserrat_bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Почта" />

            <!-- Email поле без возможности редактирования -->
            <TextView
                android:id="@+id/rd6cte99r4eh"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="43dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="36dp" />

            <!-- SETTINGS Section -->
            <LinearLayout
                android:id="@+id/r5i9w27waxj3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="44dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rscsc73a31i"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Настройки" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/settingsBtn"
                    android:layout_width="11dp"
                    android:layout_height="20dp"
                    android:src="@drawable/setting_btn"
                    android:scaleType="fitXY"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="50dp"
                android:layout_marginHorizontal="36dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>