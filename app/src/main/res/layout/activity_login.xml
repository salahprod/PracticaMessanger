<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/white">

    <LinearLayout
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/forma_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/forma"
            android:paddingHorizontal="18dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/basic_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/stroke"
                    android:layout_marginTop="115dp"
                    android:layout_marginBottom="191dp"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <TextView

                        android:id="@+id/login_form_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="34dp"
                        android:layout_marginBottom="18dp"
                        android:fontFamily="@font/montserrat_extrabold"
                        android:text="Форма авторизации"
                        android:textColor="#000000"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/button_general_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19dp"
                        android:layout_marginRight="19dp"
                        android:layout_marginBottom="48dp"
                        android:background="@drawable/stroke"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/login_button_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1dp"
                            android:layout_marginEnd="34dp"
                            android:layout_weight="1"
                            android:background="@drawable/switch_blue"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:paddingVertical="14dp">

                            <TextView
                                android:id="@+id/text_login_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="Войти"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/text_sing_up_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="38dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Запись"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:onClick="openRegisterActivity"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/email_text_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="23dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/stroke"
                        android:elevation="4dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:hint="Адрес почты"
                        android:inputType="text"
                        android:paddingHorizontal="35dp"
                        android:paddingVertical="17dp"
                        android:textColor="#9F9C9C"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/password_text_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="23dp"
                        android:layout_marginBottom="60dp"
                        android:background="@drawable/stroke"
                        android:elevation="4dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:hint="Пароль"
                        android:inputType="text"
                        android:paddingHorizontal="35dp"
                        android:paddingVertical="19dp"
                        android:textColor="#9F9C9C"
                        android:textSize="16sp" />
                    <LinearLayout
                        android:id="@+id/button_login_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:background="@drawable/switch_blue"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp"
                        android:layout_marginBottom="122dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="17dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/button_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Войти"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/political_button_1"
                        android:layout_width="307dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-80dp"
                        android:layout_marginBottom="25dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="Продолжая регистрацию вы принимаете Условия использования"
                        android:textColor="#7B7B94"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>