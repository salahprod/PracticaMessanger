<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/rpywqwf6b9am"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/lr270d4c5fc9dc6fc">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rvsz01qg0rrq"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="21dp"
                android:layout_marginStart="7dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="PROFILE"
                />
            <LinearLayout
                android:id="@+id/r692c2rc2v1e"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#00000000"
                android:layout_marginBottom="45dp"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ru62zp115rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="213dp"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImage"
                    android:layout_width="127dp"
                    android:layout_height="127dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="39dp"
                    android:src="@drawable/artem"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- NAME Section -->
            <TextView
                android:id="@+id/r5obszy5499"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="NAME"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/userNameEditText"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="40dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Yakub Kolas"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="36dp"
                />

            <!-- USERNAME Section -->
            <TextView
                android:id="@+id/rzu1s5in2gu"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginStart="41dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="USERNAME"
                />
            <TextView
                android:id="@+id/ro6z69c8mirr"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="42dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Yakub1882"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="36dp"
                />

            <!-- EMAIL Section -->
            <TextView
                android:id="@+id/rv99bsvrtqi8"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="41dp"
                android:fontFamily="@font/montserrat_bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="EMAIL"
                />
            <TextView
                android:id="@+id/rd6cte99r4eh"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="43dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="yakub_kolas@email.com"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="36dp"
                />

            <!-- SETTINGS Section -->
            <LinearLayout
                android:id="@+id/r5i9w27waxj3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="44dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/rscsc73a31i"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="SETTINGS"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:id="@+id/rw0kdc4ygjor"
                    android:layout_width="11dp"
                    android:layout_height="20dp"
                    android:src="@drawable/setting_btn"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="171dp"
                android:layout_marginHorizontal="36dp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>